generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  campaigns Campaign[]
  @@map("users")
}

model Campaign {
  id          String  @id @default(cuid())
  name        String
  clicks      Int
  impressions Int
  ctr         Float
  conversions Int
  cost        Int
  user        User   @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  @@map("campaigns")
}
